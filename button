<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Generate Video</title>
  <style>
    body {
      display: flex;
      height: 100vh;
      align-items: center;
      justify-content: center;
      font-family: system-ui, sans-serif;
      background: #0f172a;
    }
    button {
      padding: 20px 40px;
      font-size: 20px;
      font-weight: 600;
      border: none;
      border-radius: 12px;
      cursor: pointer;
      background: #22c55e;
      color: #000;
    }
    button:disabled {
      opacity: 0.6;
      cursor: not-allowed;
    }
  </style>
</head>
<body>

<button id="generate">Generate</button>

<script>
  const btn = document.getElementById("generate");

  btn.onclick = async () => {
    btn.disabled = true;
    btn.innerText = "Generating...";

    try {
      const res = await fetch("https://YOUR_WEBHOOK_URL", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({
          action: "generate_video",
          timestamp: Date.now()
        })
      });

      if (!res.ok) throw new Error("Request failed");

      btn.innerText = "Queued ✅";
    } catch (e) {
      btn.innerText = "Error ❌";
      btn.disabled = false;
    }
  };
</script>

</body>
</html>
